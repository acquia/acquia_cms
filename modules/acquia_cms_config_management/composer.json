{
    "name": "drupal/acquia_cms_config_management",
    "type": "drupal-module",
    "description": "Provides Acquia CMS recommended configurations management.",
    "license": "GPL-2.0-or-later",
    "require": {
        "acquia/drupal-environment-detector": "^1.5"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "ergebnis/composer-normalize": true,
            "oomphinc/composer-installers-extender": true,
            "phpro/grumphp-shim": true,
            "webdriver-binary/binary-chromedriver": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "1.x-dev"
        },
        "drupal-scaffold": {
            "file-mapping": {
                "[web-root]/drush/Commands/ConfigImportExportCommands.php": "assets/scaffold/files/ConfigImportExportCommands.php",
                "[web-root]/sites/default/default.settings.php": {
                    "append": "assets/scaffold/files/site-studio-settings.txt"
                }
            }
        }
    },
    "repositories": {
        "assets": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    }
}
