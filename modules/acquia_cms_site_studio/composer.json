{
    "name": "drupal/acquia_cms_site_studio",
    "type": "drupal-module",
    "description": "Handles code for Site Studio Installation & Related Configurations.",
    "license": "GPL-2.0-or-later",
    "require": {
        "acquia/cohesion": "^6.9.2 || ^7.0",
        "acquia/cohesion-theme": "^6.9 || ^7.0",
        "drupal/acquia_cms_common": "1.x-dev || 2.x-dev",
        "drupal/collapsiblock": "^4.0",
        "drupal/config_split": "^2",
        "drupal/config_filter": "^2.4",
        "drupal/node_revision_delete": "^1.0"
    },
    "conflict": {
        "drupal/acquia_cms_article": "<1.5.6",
        "drupal/acquia_cms_audio": "<1.4.6",
        "drupal/acquia_cms_event": "<1.5.6",
        "drupal/acquia_cms_image": "<1.5.8",
        "drupal/acquia_cms_page": "<1.5.6",
        "drupal/acquia_cms_person": "<1.5.6",
        "drupal/acquia_cms_place": "<1.5.6",
        "drupal/acquia_cms_search": "<1.4.11",
        "drupal/acquia_cms_video": "<1.5.6"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "ergebnis/composer-normalize": true,
            "oomphinc/composer-installers-extender": true,
            "phpro/grumphp-shim": true,
            "webdriver-binary/binary-chromedriver": true
        }
    },
    "extra": {
        "branch-alias" : {"dev-develop" : "1.x-dev"},
        "drupal-scaffold": {
            "file-mapping": {
                "[web-root]/drush/Commands/ConfigImportExportCommands.php": "modules/acquia_cms_site_studio_cm/assets/scaffold/files/ConfigImportExportCommands.php",
                "[web-root]/sites/default/default.settings.php": {
                    "append": "modules/acquia_cms_site_studio_cm/assets/scaffold/files/site-studio-settings.txt"
                }
            }
        },
        "drush": {
            "services": {
                "drush.services.yml": "^10"
            }
        },
        "enable-patching": true,
        "patches": {
            "acquia/cohesion": {
                "3340269 - Site Studio: Allow optional packages to import": "https://www.drupal.org/files/issues/2023-02-28/site-studio-allow-optional-packages.patch",
                "2571235 - Roles should depend on objects that are building the granted permissions": "https://gist.githubusercontent.com/vishalkhode1/e1ac95e3cbac97a06cd52430e3018b57/raw/af1f374c5263fc67f12b1f36b22144b57bc8714a/site-studio-dynamic-permissions.patch"
            }
        }
    },
    "repositories": {
        "assets": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "minimum-stability": "RC"
}
